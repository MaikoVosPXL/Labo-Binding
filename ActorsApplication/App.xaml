<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ActorsApplication"
             xmlns:conv="clr-namespace:ActorsApplication.Converters"
             x:Class="ActorsApplication.App">
    <Application.Resources>
        <ResourceDictionary>
            <!--uw converter moet in uw resources zitten in de hoogste map dus in uw app.xaml-->
            <conv:AgeConverter x:Key="AgeToString"/>
            <conv:AgeToColorConverter x:Key="AgeToColor"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
