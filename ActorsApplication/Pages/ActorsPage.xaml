<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ActorsApplication.Pages.ActorsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:ActorsApplication.Data"
    xmlns:pages="clr-namespace:ActorsApplication.Pages"
    x:DataType="pages:ActorsPage"
    Title="ActorsPage"
    Shell.NavBarIsVisible="False">
<!-- x:Datatype gebruiken voor binding en zeggen waar moet ik het object halen. als ge datatype gebruikt dan kan de Binding: zien wat er in zit en gemakkelijker aanspreken.-->
    <ScrollView>
        <StackLayout>
            <Label
                Margin="8,8,8,0"
                FontAttributes="Bold"
                FontSize="Medium"
                Text="Actors of the day"
                TextColor="Crimson" />
            <CollectionView ItemsSource="{Binding ActorsList}">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout
                        Orientation="Horizontal"
                        Span="4" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Actor">

                        <Grid Margin="6"
                              BackgroundColor="{Binding BirthYear, Converter={x:StaticResource AgeToColor}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>

                            <Image
                                Margin="8"
                                Aspect="AspectFill"
                                HeightRequest="150"
                                HorizontalOptions="Start"
                                Source="{Binding ProfilePicture}"
                                VerticalOptions="Start"
                                WidthRequest="100" />

                            <StackLayout
                                Grid.Column="1"
                                Margin="8"
                                Orientation="Vertical"
                                VerticalOptions="Start"
                                WidthRequest="200">

                                <Label
                                    FontAttributes="Bold"
                                    Text="{Binding FirstName}"
                                    VerticalOptions="Center" />

                                <Label
                                    FontAttributes="Italic"
                                    MaxLines="4"
                                    Text="{Binding BirthYear, Converter={x:StaticResource AgeToString}}"
                                    VerticalOptions="Start" />
                                <Button
                                    Clicked="DeleteThisActor"
                                    Text="Delete"
                                    CommandParameter="{Binding .}"/>
                            </StackLayout>

                        </Grid>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button
                Clicked="AddActorClicked"
                Text="Add Actor" />
        </StackLayout>
    </ScrollView>
</ContentPage>

